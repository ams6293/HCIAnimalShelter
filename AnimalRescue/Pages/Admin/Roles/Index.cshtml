@page
@model AnimalRescue.Pages.Admin.Roles.IndexModel
@{
}

<div class="border-bottom backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Admin/Roles/Update" asp-area="" class="btn btn-primary"><i class="fa-solid fa-plus"></i>&nbsp; Create New</a>
        </div>
    </div>
    <br /><br />
    <p class="hidden" id="success">@Model.Success.ToString()</p>
    <p class="hidden" id="message">@Model.Message</p>
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th scope="col">Role</th>
        </tr>
        </thead>
        <tbody>

        @{
            foreach (var role in Model.AllRoles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-outline-success" asp-page="/Admin/Roles/Update" asp-route-id="@role.Id">Update</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        function alertFunc() {
            var success = $("#success").html()
            var message = $("#message").html();
            console.log(success);
            console.log(message);
            if(success == "True"){
                toastr.success(message);
            };
        }
        window.onload = alertFunc();
    </script>
}