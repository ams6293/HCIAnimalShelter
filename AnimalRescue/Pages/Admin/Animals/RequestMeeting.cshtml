@page
@model AnimalRescue.Pages.Admin.Animals.RequestMeetingModel
@using Microsoft.AspNetCore.Identity
@using Infrastructure.Utility
@using ApplicationCore.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<div>

    @if (SignInManager.IsSignedIn(User))
    {

        <h1>Meeting Sign Up!</h1>
        <p>Hello @User.Identity?.Name! Thank you for requesting a meeting with,  @Html.DisplayFor(model => model.Animal.Name)?</p>
        <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Animal.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Animal.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Animal.Species)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Animal.Species)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Animal.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Animal.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Animal.DoB)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Animal.DoB)
            </dd>
        </dl>
        </div>
        <div>
       
        <a asp-page="./Index">Back to List</a>
</div>
    }
    else
    {
        <h1>Please Log In To Sign Up</h1>
    }
</div>