@page
@using Infrastructure.Utility
@using ApplicationCore.Models
@model AnimalRescue.Pages.Admin.Animals.DetailsModel

@{
    ViewData["Title"] = "Details";
}



<div class="DetailsForm">
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animal.Name):
        </dt>
        <dd class="col-sm-10">
           <b> @Html.DisplayFor(model => model.Animal.Name)</b>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animal.Species):
        </dt>
        <dd class="col-sm-10">
           <b>   @Html.DisplayFor(model => model.Animal.Species)</b>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animal.Description):
        </dt>
        <dd class="col-sm-10">
            <b>  @Html.DisplayFor(model => model.Animal.Description)</b>
        </dd>
        <dt class="col-sm-2">
            Age:
        </dt>
        <dd class="col-sm-10">


         <b>    @Html.DisplayFor(model => model.Age)</b>

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animal.IsAvailable):
        </dt>
        <dd class="col-sm-10">
           <b>   @Html.DisplayFor(model => model.Animal.IsAvailable)</b>
        </dd>
    </dl>
    @if (User.IsInRole(SD.AdminRole))
    {
        <a asp-page="./Upsert" class="btn btn-primary mb-2" asp-route-id="@Model.Animal.Id">Edit</a>
        <a asp-page="./Delete" class="btn btn-primary mb-2" asp-route-id="@Model.Animal.Id">Delete</a>
   
    }|
    @if (User.IsInRole(SD.CustomerRole))
    {
        <a asp-page="./AddFavorite" class="btn btn-primary mb-2" asp-route-id="@Model.Animal.Id">Add to Favorites</a>
    }
    <a asp-page="./Index">Back to List</a>
</div>
